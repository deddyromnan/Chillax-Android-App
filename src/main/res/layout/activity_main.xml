<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/rainBtn"
        style="@style/OptionButton"
        android:contentDescription="@string/raining_sound_button"
        android:elevation="2dp"
        android:src="@drawable/ic_rain"
        app:layout_constraintBottom_toTopOf="@id/bonfireBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bonfireBtn"
        style="@style/OptionButton"
        android:contentDescription="@string/bonfire_sound_button"
        android:src="@drawable/ic_fire"
        app:layout_constraintBottom_toTopOf="@id/forestBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rainBtn" />

    <ImageView
        android:id="@+id/forestBtn"
        style="@style/OptionButton"
        android:contentDescription="@string/forest_sound_button"
        android:src="@drawable/ic_forest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bonfireBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>